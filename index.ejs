<% layout("/layouts/boilerplate")-%>


    <h2>All Listings</h2>
    <!-- <form method="GET" action="/listings/new"> -->
        <!-- <button>Create New Listing</button>
    </form> -->
    <div class="row row-cols-lg-3 row-col-md-2 row-col-sm-1">
        <% for(let item of allListings) { %>
            <a href="/listings/<%= item._id %>" class="listing-link">
            <div class="card col " style="width: 20rem;">
                <img src="<%= item.image.url %>"
                 class="card-img-top" 
                 alt="listing_image"
                  height="200rem"
                   />
                   <div class="card-img-overlay"></div>
                <div class="card-body">
                  <p class="card-text">
                   <b><%= item.title %></b> 
                    <br>
                  &#8377;  <%=  item.price.toLocaleString("en-IN") %>/night
                    </p>
                </div>
              </div>
            </a>
              <%  }%>
        
    </div>
    
       
   